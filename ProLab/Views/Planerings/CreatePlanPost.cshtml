@model PlanPost

@{
    ViewData["Title"] = "CreatePlanPost";
}

<h1>Create</h1>

<h4>PlanPost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePlanPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div asp-for="DateTimePosted" class="col-md-4 control-label text-hide">@Html.DisplayFor(Model => Model.DateTimePosted)</div>
            <div asp-for="DateTimeChanged" class="col-md-4 control-label text-hide">@Html.DisplayFor(Model => Model.DateTimeChanged)</div>
            <div class="form-group">
                <label asp-for="ApplicationUserId" class="control-label"></label>
                <select asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PlanedDateTime" class="control-label"></label>
                <input asp-for="PlanedDateTime" class="form-control" />
                <span asp-validation-for="PlanedDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDateTime" class="control-label"></label>
                <input asp-for="StartDateTime" class="form-control" />
                <span asp-validation-for="StartDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDateTime" class="control-label"></label>
                <input asp-for="EndDateTime" class="form-control" />
                <span asp-validation-for="EndDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AktivitetId" class="control-label"></label>
                <select asp-for="AktivitetId" class="form-control" asp-items="ViewBag.AktivitetId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-sm btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-sm btn-outline-success" asp-action="IndexPlanPosts">Till Planeringen</a>
</div>