@model HockeyGame

@{
    ViewData["Title"] = "DetailsHockeyGame";
}


<div class="card">
    <div class="card-header">
        <h6>Hockeymatch @Html.DisplayFor(model => model.GameNumber)</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GameDateTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GameDateTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GameNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GameNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TSMNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TSMNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GameCategory)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GameCategory.GameCategoryName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GameStatus)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GameStatus.GameStatusName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GameType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GameType.GameTypeName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Series)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Series.SeriesName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Arena)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Arena.ArenaName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HomeTeam)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HomeTeam.ClubName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AwayTeam)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AwayTeam.ClubName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HomeTeamScore)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HomeTeamScore)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AwayTeamScore)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AwayTeamScore)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HD1)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HD1.FullName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HD2)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HD2.FullName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LD1)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LD1.FullName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LD2)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LD2.FullName)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <div>
            <a class="btn btn-sm btn-outline-success" asp-action="EditHockeyGame" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-sm btn-outline-success" asp-action="IndexHockeyGames">Till Hockeygames</a>
        </div>
    </div>
</div>