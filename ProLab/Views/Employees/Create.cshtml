@model ProLab.Models.DataModels.Employee

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div asp-for="DateTimePosted" class="col-md-4 control-label text-hide">@Html.DisplayFor(Model => Model.DateTimePosted)</div>
            <div asp-for="DateTimeChanged" class="col-md-4 control-label text-hide">@Html.DisplayFor(Model => Model.DateTimeChanged)</div>
            <div class="form-group">
                <label asp-for="ApplicationUserId" class="control-label"></label>
                <select asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId"></select>
            </div>
            <div class="form-group">
                <div asp-for="EmployeeNumber" class="col-md-4 control-label text-hide">@Html.DisplayFor(Model => Model.EmployeeNumber)</div>
                <div asp-for="Name" class="col-md-4 control-label text-hide">@Html.DisplayFor(Model => Model.Name)</div>
                <div asp-for="Address" class="col-md-4 control-label text-hide">@Html.DisplayFor(Model => Model.Address)</div>
                <div asp-for="PhoneNumbers" class="col-md-4 control-label text-hide">@Html.DisplayFor(Model => Model.PhoneNumbers)</div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-sm btn-primary" />
            </div>
        </form>
    </div>
</div>
