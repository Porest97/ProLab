        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BPStatus.BPStatusName)
        </dd>
    </dl>
</div>
<div class="card-footer">    
    <a class="btn btn-sm btn-success" asp-controller="Billing" asp-action="ListBillingPosts">Till FA-Posterna</a>
</div>
</div>